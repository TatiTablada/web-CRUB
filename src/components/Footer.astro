---
const currentYear = new Date().getFullYear()

const infoContacto = {
    nombre: 'Centro Regional Universitario',
    telefono: '2314-417550',
    email: 'educacioncytbolivar@gmail.com',
    direccion: 'Cacique Coliqueo 940',
}

const enlacesRapidos = [
    { nombre: 'Inicio', url: '/' },
    { nombre: 'Institución', url: '/institucion/historia' },
    { nombre: 'Oferta Académica', url: '/oferta' },
    { nombre: 'Extensión', url: '/extension-crub' },
    { nombre: 'Proyectos', url: '/proyectos' },
    { nombre: 'Residencias', url: '/residencias' },
]

const redesSociales = [
    {
        nombre: 'Facebook',
        url: 'https://web.facebook.com/centrouniversitario.bolivar',
        svg: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>',
    },
    {
        nombre: 'Instagram',
        url: 'https://www.instagram.com/crubbolivar',
        svg: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8A4 4 0 0 1 16 11.37m1.5-4.87h.01"/></g></svg>',
    },
    {
        nombre: 'Twitter/X',
        url: 'https://x.com/CrubBolivar',
        svg: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6c2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4c-.9-4.2 4-6.6 7-3.8c1.1 0 3-1.2 3-1.2"/></svg>',
    },
]
---

<footer
    class="bg-institucional-azul-900 text-white mt-12 border-t-4 border-institucional-oro"
>
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12 lg:gap-20">
            <div class="space-y-4">
                <h3 class="font-encabezado text-xl font-bold mb-4">
                    {infoContacto.nombre}
                </h3>
                <p class="font-cuerpo text-sm text-white">
                    <span class="font-bold">Teléfono:</span>
                    <a
                        href={`tel:+54${infoContacto.telefono.replace(/-/g, '')}`}
                        class="hover:text-institucional-azul-100 transition duration-150"
                        >{infoContacto.telefono}</a
                    >
                </p>
                <p class="font-cuerpo text-sm text-white">
                    <span class="font-bold">Email:</span>
                    <a
                        href={`mailto:${infoContacto.email}`}
                        class="hover:text-institucional-azul-100 transition duration-150"
                        >{infoContacto.email}</a
                    >
                </p>
                <p class="font-cuerpo text-sm text-white">
                    <span class="font-bold">Dirección:</span>
                    {infoContacto.direccion}
                </p>
            </div>

            <div class="space-y-4">
                <h3 class="font-encabezado text-lg font-bold mb-4">
                    Navegación Rápida
                </h3>
                <ul class="space-y-2 font-cuerpo text-sm">
                    {
                        enlacesRapidos.map((link) => (
                            <li>
                                <a
                                    href={link.url}
                                    class="text-white hover:text-institucional-azul-100 transition duration-150"
                                >
                                    {link.nombre}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <div class="space-y-4">
                <h3 class="font-encabezado text-lg font-bold mb-4">Síguenos</h3>
                <div class="flex space-x-4">
                    {
                        redesSociales.map((red) => (
                            <a
                                href={red.url}
                                target="_blank"
                                rel="noopener noreferrer"
                                aria-label={red.nombre}
                                class="text-white hover:text-institucional-azul-100 transition duration-150 w-6 h-6"
                                set:html={red.svg}
                            />
                        ))
                    }
                </div>
            </div>
        </div>

        <div class="mt-10 pt-6 border-t border-bolivar-azul-700 text-center">
            <p class="font-cuerpo text-sm text-white">
                Copyright &copy; {currentYear}
                {infoContacto.nombre}. Todos los derechos reservados.
            </p>
        </div>
    </div>
</footer>
