---
import Navegacion from './Navegacion.astro'
import SearchToggle from './SearchToggle.astro'
---

<header
    class="bg-white text-institucional-azul-900 shadow-lg sticky top-0 z-50"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-20">
            <a href="/" class="flex-shrink-0">
                <span class="font-encabezado text-xl font-bold tracking-wider">
                    CRUB Centro Regional Universitario Bolivar
                </span>
            </a>

            <div class="hidden md:flex items-center">
                <Navegacion />

                <a
                    href="/inscripciones"
                    class="bg-institucional-oro text-institucional-azul-900 px-4 py-2 rounded-md text-sm font-bold hover:opacity-80 transition duration-150 ml-4"
                >
                    Inscribite
                </a>

                <SearchToggle />
            </div>
        </div>
    </div>
</header>
